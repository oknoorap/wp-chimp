{
  "name": "wp-chimp/wp-chimp",
  "description": "Lean MailChimp subscription form plugin for WordPress",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Thoriq Firdaus",
      "email": "thoriqoe@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.4",
    "drewm/mailchimp-api": "^2.0",
    "a5hleyrich/wp-background-processing": "^1.0",
    "underdev/requirements": "^1.2"
  },
  "require-dev": {
    "brain/monkey": "~2.0.0",
    "wimg/php-compatibility": "*",
    "wp-coding-standards/wpcs": "^0.14.1",
    "coenjacobs/mozart": "^0.2.2"
  },
  "extra": {
    "mozart": {
      "dep_namespace": "WP_Chimp\\Deps\\",
      "dep_directory": "/packages/Deps/",
      "classmap_directory": "/packages/Classes/",
      "classmap_prefix": "WP_Chimp_Packages_",
      "packages": [
          "drewm/mailchimp-api",
          "a5hleyrich/wp-background-processing",
          "underdev/requirements"
      ]
    }
  },
  "scripts": {
    "post-install-cmd": [
        "\"vendor/bin/mozart\" compose",
        "composer dumpautoload"
    ],
    "post-update-cmd": [
        "\"vendor/bin/mozart\" compose",
        "composer dumpautoload"
    ]
  }
}
